@model WeatherApp.Models.LocationRequest

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        @Html.LabelFor(l => l.Location, "Enter your location", new { @class = "pr-2" });
        @Html.TextBoxFor(t => t.Location, new { required = "required" });

        <input class="btn btn-primary" type="submit" value="Search" name="search" />
    }

    @if (Model.WeatherDetails != null)
    {
        <div class="row pt-3">
            @await Html.PartialAsync("WeatherWidget", Model.WeatherDetails);
        </div>
    }
</div>
